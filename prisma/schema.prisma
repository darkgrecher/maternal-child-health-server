generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// USER & AUTHENTICATION
// ============================================================================

model User {
  id         String  @id @default(uuid())
  email      String  @unique
  name       String?
  givenName  String? @map("given_name")
  familyName String? @map("family_name")
  picture    String?

  // OAuth fields - at least one should be set
  googleId String? @unique @map("google_id")
  auth0Id  String? @unique @map("auth0_id")

  // Password auth (optional - for email/password users via Auth0)
  passwordHash String? @map("password_hash")

  // Auth metadata
  lastLoginAt DateTime? @map("last_login_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  children      Child[]
  refreshTokens RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("refresh_tokens")
}

// ============================================================================
// CHILD PROFILES
// ============================================================================

model Child {
  id         String  @id @default(uuid())
  chdrNumber String? @map("chdr_number")

  // Personal Information
  firstName   String   @map("first_name")
  lastName    String   @map("last_name")
  dateOfBirth DateTime @map("date_of_birth")
  gender      Gender
  photoUri    String?  @map("photo_uri")

  // Birth Information
  birthWeight            Float?        @map("birth_weight")
  birthHeight            Float?        @map("birth_height")
  birthHeadCircumference Float?        @map("birth_head_circumference")
  bloodType              BloodType?    @map("blood_type")
  placeOfBirth           String?       @map("place_of_birth")
  deliveryType           DeliveryType? @map("delivery_type")

  // Medical Information
  allergies         String[]
  specialConditions String[] @map("special_conditions")

  // Family Information
  motherName       String? @map("mother_name")
  fatherName       String? @map("father_name")
  emergencyContact String? @map("emergency_contact")
  address          String?

  // Owner
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relations
  vaccinationRecords VaccinationRecord[]
  growthMeasurements GrowthMeasurement[]
  appointments       Appointment[]

  // Metadata
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("children")
}

// ============================================================================
// VACCINATION SCHEDULE & RECORDS
// ============================================================================

// Sri Lanka National Immunization Schedule vaccines
model Vaccine {
  id          String  @id @default(uuid())
  name        String // Full name e.g., "Bacillus Calmette-Gu√©rin"
  shortName   String  @map("short_name") // e.g., "BCG"
  description String?

  // Schedule information
  scheduledAgeMonths Int    @map("scheduled_age_months") // Age in months when due
  scheduledAgeDays   Int?   @map("scheduled_age_days") // Additional days (for birth = 0 months 0 days)
  doseNumber         Int    @default(1) @map("dose_number") // For multi-dose vaccines
  totalDoses         Int    @default(1) @map("total_doses")
  ageGroup           String @map("age_group") // Display label e.g., "At Birth", "2 Months"

  // Vaccine details
  diseasesPrevented String[] @map("diseases_prevented")
  sideEffects       String[] @map("side_effects")
  contraindications String[]

  // Order for display
  sortOrder Int @default(0) @map("sort_order")

  // Relations
  vaccinationRecords VaccinationRecord[]

  // Metadata
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([shortName, doseNumber])
  @@map("vaccines")
}

// Individual child's vaccination record
model VaccinationRecord {
  id        String @id @default(uuid())
  childId   String @map("child_id")
  vaccineId String @map("vaccine_id")

  // Status
  status VaccinationStatus @default(pending)

  // Administration details
  scheduledDate    DateTime  @map("scheduled_date")
  administeredDate DateTime? @map("administered_date")
  administeredBy   String?   @map("administered_by")
  location         String?
  batchNumber      String?   @map("batch_number")

  // Notes
  notes               String?
  sideEffectsOccurred String[] @map("side_effects_occurred")

  // Relations
  child   Child   @relation(fields: [childId], references: [id], onDelete: Cascade)
  vaccine Vaccine @relation(fields: [vaccineId], references: [id])

  // Metadata
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([childId, vaccineId])
  @@map("vaccination_records")
}

enum VaccinationStatus {
  pending
  completed
  overdue
  missed
  scheduled
}

// ============================================================================
// GROWTH MEASUREMENTS
// ============================================================================

model GrowthMeasurement {
  id      String @id @default(uuid())
  childId String @map("child_id")

  // Measurement data
  measurementDate DateTime @map("measurement_date")
  ageInMonths     Int      @map("age_in_months")
  ageInDays       Int?     @map("age_in_days")

  // Physical measurements
  weight            Float // in kg
  height            Float // in cm
  headCircumference Float? @map("head_circumference") // in cm

  // WHO Percentiles (calculated based on age and gender)
  weightPercentile            Float? @map("weight_percentile")
  heightPercentile            Float? @map("height_percentile")
  headCircumferencePercentile Float? @map("head_circumference_percentile")

  // Z-scores (standard deviations from median)
  weightZScore            Float? @map("weight_z_score")
  heightZScore            Float? @map("height_z_score")
  headCircumferenceZScore Float? @map("head_circumference_z_score")

  // BMI (calculated)
  bmi           Float?
  bmiPercentile Float? @map("bmi_percentile")
  bmiZScore     Float? @map("bmi_z_score")

  // Measurement context
  measuredBy String? @map("measured_by")
  location   String?
  notes      String?

  // Relations
  child Child @relation(fields: [childId], references: [id], onDelete: Cascade)

  // Metadata
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("growth_measurements")
}

enum Gender {
  male
  female
}

enum BloodType {
  A_POSITIVE  @map("A+")
  A_NEGATIVE  @map("A-")
  B_POSITIVE  @map("B+")
  B_NEGATIVE  @map("B-")
  AB_POSITIVE @map("AB+")
  AB_NEGATIVE @map("AB-")
  O_POSITIVE  @map("O+")
  O_NEGATIVE  @map("O-")
  unknown
}

enum DeliveryType {
  normal
  cesarean
  assisted
}

// ============================================================================
// APPOINTMENTS
// ============================================================================

model Appointment {
  id      String @id @default(uuid())
  childId String @map("child_id")

  // Appointment details
  title    String
  type     AppointmentType
  dateTime DateTime        @map("date_time")
  duration Int?            // Duration in minutes

  // Location
  location String
  address  String?

  // Provider information
  providerName String? @map("provider_name")
  providerRole String? @map("provider_role")
  providerPhone String? @map("provider_phone")

  // Status
  status AppointmentStatus @default(scheduled)
  notes  String?

  // Reminder
  reminderSent Boolean @default(false) @map("reminder_sent")

  // Relations
  child Child @relation(fields: [childId], references: [id], onDelete: Cascade)

  // Metadata
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("appointments")
}

enum AppointmentType {
  vaccination
  growth_check
  development_check
  general_checkup
  specialist
  emergency
}

enum AppointmentStatus {
  scheduled
  completed
  cancelled
  rescheduled
  missed
}
